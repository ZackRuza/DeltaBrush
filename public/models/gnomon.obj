# Gnomon - 3-axis coordinate system indicator
mtllib gizmo.mtl

# X-axis prism (red)
g x_axis
v 0.0 -0.05 -0.05
v 1.0 -0.05 -0.05
v 1.0 0.05 -0.05
v 0.0 0.05 -0.05
v 0.0 -0.05 0.05
v 1.0 -0.05 0.05
v 1.0 0.05 0.05
v 0.0 0.05 0.05

usemtl axis_x
f 1 4 3 2
f 5 6 7 8
f 1 2 6 5
f 2 3 7 6
f 3 4 8 7
f 4 1 5 8

# Y-axis prism (green)
g y_axis
v -0.05 0.0 -0.05
v 0.05 0.0 -0.05
v 0.05 1.0 -0.05
v -0.05 1.0 -0.05
v -0.05 0.0 0.05
v 0.05 0.0 0.05
v 0.05 1.0 0.05
v -0.05 1.0 0.05

usemtl axis_y
f 9 12 11 10
f 13 14 15 16
f 9 10 14 13
f 10 11 15 14
f 11 12 16 15
f 12 9 13 16

# Z-axis prism (blue)
g z_axis
v -0.05 -0.05 0.0
v 0.05 -0.05 0.0
v 0.05 0.05 0.0
v -0.05 0.05 0.0
v -0.05 -0.05 1.0
v 0.05 -0.05 1.0
v 0.05 0.05 1.0
v -0.05 0.05 1.0

usemtl axis_z
f 17 20 19 18
f 21 22 23 24
f 17 18 22 21
f 18 19 23 22
f 19 20 24 23
f 20 17 21 24
